{
  "name": "my-better-t-app",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "hono": "^4.8.2",
      "@trpc/server": "^11.7.2",
      "better-auth": "^1.4.7",
      "ai": "^5.0.49",
      "@ai-sdk/google": "^2.0.13",
      "@tanstack/react-query": "^5.90.12",
      "@trpc/tanstack-react-query": "^11.7.2",
      "@trpc/client": "^11.7.2",
      "@ai-sdk/react": "^2.0.39",
      "@better-auth/expo": "^1.4.7",
      "drizzle-orm": "^0.45.1",
      "@types/pg": "^8.15.6"
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @my-better-t-app/db db:push",
    "db:studio": "turbo -F @my-better-t-app/db db:studio",
    "db:generate": "turbo -F @my-better-t-app/db db:generate",
    "db:migrate": "turbo -F @my-better-t-app/db db:migrate",
    "db:start": "turbo -F @my-better-t-app/db db:start",
    "db:watch": "turbo -F @my-better-t-app/db db:watch",
    "db:stop": "turbo -F @my-better-t-app/db db:stop",
    "db:down": "turbo -F @my-better-t-app/db db:down"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "turbo": "^2.6.3",
    "@biomejs/biome": "^2.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "typescript": "catalog:",
    "@types/node": "^22.13.11"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write ."
    ]
  },
  "packageManager": "bun@1.3.4"
}
